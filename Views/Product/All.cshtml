@model List<ProductViewModel>

<h1>All Products info:</h1>
<hr />

<table class="table table-hover">
    <tr>
        <th>Name:</th>
        <th>Price:</th>
        <th>Quantity:</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td> <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
            <td> <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
            <td> <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>

        </tr>
    }
</table>